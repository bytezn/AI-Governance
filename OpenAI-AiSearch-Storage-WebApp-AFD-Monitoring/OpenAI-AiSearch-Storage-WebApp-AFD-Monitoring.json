{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "author": "Lawrance Reddy"
    },
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "EastUS",
            "metadata": {
                "description": "Location of the resources"
            }
        },
        "subnetId": {
            "type": "string",
            "metadata": {
                "description": "Subnet ID for the private endpoints"
            }
        },
        "logAnalyticsWorkspaceName": {
            "type": "string",
            "defaultValue": "myLogAnalyticsWorkspace",
            "metadata": {
                "description": "Name of the Log Analytics workspace"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2020-08-01",
            "name": "[parameters('logAnalyticsWorkspaceName')]",
            "location": "[parameters('location')]",
            "properties": {}
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "openaiService",
            "location": "[parameters('location')]",
            "kind": "OpenAI",
            "sku": {
                "name": "S0"
            },
            "properties": {
                "privateEndpointConnections": [
                    {
                        "privateEndpoint": {
                            "id": "[parameters('subnetId')]"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
            ]
        },
        {
            "type": "Microsoft.Search/searchServices",
            "apiVersion": "2020-03-13",
            "name": "aiSearchService",
            "location": "[parameters('location')]",
            "sku": {
                "name": "standard"
            },
            "properties": {
                "privateEndpointConnections": [
                    {
                        "privateEndpoint": {
                            "id": "[parameters('subnetId')]"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "storageAccount",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {
                "privateEndpointConnections": [
                    {
                        "privateEndpoint": {
                            "id": "[parameters('subnetId')]"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
            ]
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "webApp",
            "location": "[parameters('location')]",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'appServicePlan')]",
                "privateEndpointConnections": [
                    {
                        "privateEndpoint": {
                            "id": "[parameters('subnetId')]"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
                "[resourceId('Microsoft.Web/serverfarms', 'appServicePlan')]"
            ]
        },
        {
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2019-04-15",
            "name": "azureFrontDoor",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_AzureFrontDoor"
            },
            "properties": {
                "privateEndpointConnections": [
                    {
                        "privateEndpoint": {
                            "id": "[parameters('subnetId')]"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]"
            ]
        },
        {
            "type": "Microsoft.Insights/diagnosticSettings",
            "apiVersion": "2017-05-01-preview",
            "name": "diagnosticSettings",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
                "[resourceId('Microsoft.CognitiveServices/accounts', 'openaiService')]",
                "[resourceId('Microsoft.Search/searchServices', 'aiSearchService')]",
                "[resourceId('Microsoft.Storage/storageAccounts', 'storageAccount')]",
                "[resourceId('Microsoft.Web/sites', 'webApp')]",
                "[resourceId('Microsoft.Cdn/profiles', 'azureFrontDoor')]"
            ],
            "properties": {
                "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
                "logs": [
                    {
                        "category": "Administrative",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "Security",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "ServiceHealth",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "Alert",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "Recommendation",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "Policy",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "Autoscale",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "ResourceHealth",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    }
                ],
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true,
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    }
                ]
            }
        }
    ]
}