{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
      "metadata": {
        "author": "Lawrance Reddy"
    }, 
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the resources"
            }
        },
        "subnetId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of the subnet"
            }
        }
    },
    "variables": {
        "openAIName": "[concat('openai-', uniqueString(resourceGroup().id))]",
        "privateEndpointName": "[concat(variables('openAIName'), '-pe')]"
    },
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2021-04-30",
            "name": "[variables('openAIName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "S0"
            },
            "kind": "OpenAI",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "customSubDomainName": "[variables('openAIName')]",
                "defaultOutboundAccess": false,
                "restrictOutboundNetworkAccess":true,
                "networkAcls": {
                    "defaultAction": "Deny",
                    "bypass": "None",
                    "ipRules": []
                },
                "publicNetworkAccess": "Disabled"
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2021-05-01",
            "name": "[variables('privateEndpointName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAIName'))]"
            ],
            "properties": {
                "subnet": {
                    "id": "[parameters('subnetId')]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[concat(variables('openAIName'), '-plsc')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAIName'))]",
                            "groupIds": [
                                "account"
                            ],
                            "requestMessage": "Please approve the connection."
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "openAIName": {
            "type": "string",
            "value": "[variables('openAIName')]"
        },
        "privateEndpointName": {
            "type": "string",
            "value": "[variables('privateEndpointName')]"
        }
    }
}